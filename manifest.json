{
    "name": "Google+ Shackname Translator",
    "version": "0.6",
    "manifest_version": 2,
    "description": "Puts Shacknews names into your Google+ stream",
    "background": { "scripts": [ "background.js" ] },
    "update_url": "http://clients2.google.com/service/update2/crx",
    "content_scripts": [
    {
        "js": [ "translate.js" ],
        "all_frames": true,
        "matches": [ "https://plus.google.com/*" ]
    }],
    "permissions": [
        "http://gamewith.us/*",
        "https://plus.google.com/*"
    ],
    "web_accessible_resources": [ "shack.png" ]
}

